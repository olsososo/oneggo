<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
   <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_listitem_product"
        android:padding="10dip"
        android:tag="back">
		
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"> 
		         <Button
		             android:layout_width="wrap_content"
		             android:layout_height="30dip"
		             android:id="@+id/delete"
		             android:background="@drawable/delete_button_bg"
		             android:text="@string/delete"
		             android:textSize="14sp"
		          	 android:paddingLeft="40dip"
		         	 android:paddingRight="40dip"
		         	 android:layout_centerInParent="true"
		             android:textColor="@android:color/white"/>  
		             
	             <ProgressBar 
	                android:id="@+id/progress_bar"
	                android:visibility="gone"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="15dip"
	                android:layout_alignLeft="@+id/delete"
	                android:layout_centerVertical="true"
	                style="@android:style/Widget.ProgressBar.Small"
	                />
            </RelativeLayout>
        </LinearLayout>
		
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <Button
             android:layout_width="wrap_content"
             android:layout_height="30dip"
             android:id="@+id/cancel"
             android:background="@drawable/cancel_button_bg"
             android:text="@string/cancel"
             android:textSize="14sp"
	         android:paddingLeft="40dip"
	         android:paddingRight="40dip"
             android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    
   	<LinearLayout
    	android:id="@+id/front"
    	android:tag="front"
	    android:padding="10dip"
	    android:background="@color/white"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
    	
	    <ImageView
	        android:id="@+id/image"
	        android:layout_width="80dip"
	        android:layout_height="80dip"
	        android:background="#c9c9c9"
	        android:layout_marginBottom="4dip"
	        android:scaleType="centerCrop"/>
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="15dip">
		    <TextView
		        android:id="@+id/title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:maxLines="4"
		        android:ellipsize="end"
		        android:textColor="#7E7E7E"
		        android:textSize="12sp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        />	 
		     
		    <TextView
		        android:id="@+id/price"
		        android:textSize="12sp"
		        android:textColor="#E6312A"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentBottom="true"
		        />
	    
			<LinearLayout
		        android:id="@+id/layout_count"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
		        android:orientation="horizontal"
		        >
		
		        <TextView
		            android:id="@+id/text_view_count"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12sp"
		            android:layout_marginRight="6dip"
		            android:drawablePadding="3dip"
		            android:drawableLeft="@drawable/ic_view"
		            android:textColor="#7E7E7E"/>
		
		        <TextView
		            android:id="@+id/text_like_count"
		            android:drawablePadding="3dip"
		            android:textSize="12sp"
		            android:layout_width="wrap_content"
		            android:textColor="#7E7E7E"
		            android:drawableLeft="@drawable/ic_like"
		            android:layout_height="wrap_content"/>
		    </LinearLayout>
	    </RelativeLayout>
   	</LinearLayout>
</FrameLayout>