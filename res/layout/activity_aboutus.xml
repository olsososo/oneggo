<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   <RelativeLayout 
        android:id="@+id/menu"
        android:orientation="vertical"
        android:background="@color/v1_actionbar" 
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <Button 
            android:id="@+id/back" 
            android:layout_centerVertical="true" 
            android:layout_marginLeft="@dimen/menu_margin_left" 
            android:paddingLeft="@dimen/menu_margin_left" 
            android:textSize="@dimen/menu_back_text" 
            android:textColor="@color/v1_menu_back_text"  
            android:background="@drawable/selector_btn_back" 
            android:layout_width="@dimen/menu_back_width" 
            android:layout_height="@dimen/menu_back_height" 
            android:text="@string/back" />
        <TextView 
            android:layout_centerInParent="true" 
            android:textSize="@dimen/menu_title" 
            android:textColor="@color/v1_menu_title"  
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/aboutus" />
        
   </RelativeLayout>
   
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_marginTop="40dp"
           android:orientation="vertical"
           >
           
           <LinearLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
			   <ImageView 
	               android:layout_width="150dp"
	               android:layout_height="200dp"
	               android:src="@drawable/cat"
	               android:contentDescription="@null"
	               />               
           </LinearLayout>
           
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/app_desc"
               android:textColor="#99000000"
               android:textSize="16sp"
               android:layout_marginTop="10dp"
               />
       </LinearLayout>
       
        <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_alignParentBottom="true"
           android:orientation="vertical"
           >
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="官网: www.oneggo.com"
               android:textSize="12sp"
               android:textColor="#99000000"
               android:padding="2dp"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="新浪微博: @oneggo"
               android:textSize="12sp"
               android:textColor="#99000000"
               android:padding="2dp"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="copyright @ 2014-2016 版权所有"
               android:textSize="12sp"
               android:textColor="#99000000"
               android:padding="2dp"
               android:layout_marginBottom="20dp"
               />
        </LinearLayout>
   </RelativeLayout>
</LinearLayout>
