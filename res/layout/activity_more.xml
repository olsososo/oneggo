<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/menu"
        android:orientation="vertical"
        android:background="@color/v1_actionbar" 
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <Button 
            android:id="@+id/back" 
            android:layout_centerVertical="true" 
            android:layout_marginLeft="@dimen/menu_margin_left" 
            android:paddingLeft="@dimen/menu_margin_left" 
            android:textSize="@dimen/menu_back_text" 
            android:textColor="@color/v1_menu_back_text"  
            android:background="@drawable/selector_btn_back" 
            android:layout_width="@dimen/menu_back_width" 
            android:layout_height="@dimen/menu_back_height" 
            android:text="@string/back" />
        <TextView 
            android:layout_centerInParent="true" 
            android:textSize="@dimen/menu_title" 
            android:textColor="@color/v1_menu_title"  
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/more" />
   </RelativeLayout>
   
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/input_margin_top"
	    android:layout_marginLeft="@dimen/input_margin_left"
	    android:layout_marginRight="@dimen/input_margin_right"
	    android:background="@drawable/push_setting_bg"
	    android:orientation="vertical">
        
		<RelativeLayout 
		   	android:clickable="true"
	    	android:id="@+id/set_color"
	    	android:addStatesFromChildren="true"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/input_height">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/set_color"
		        android:textSize="@dimen/input_text"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:paddingLeft="@dimen/input_text_padding_left"
		        />
		    
		    <ImageView 
		        android:layout_width="16dp"
		        android:layout_height="16dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="15dp"
		        android:src="@drawable/more"
		        android:contentDescription="@null"
		        />
		</RelativeLayout>
		
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/v1_input_border"
	        />	
	        
		<RelativeLayout 
		   	android:clickable="true"
	    	android:id="@+id/set_swipe"
	    	android:addStatesFromChildren="true"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/input_height">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/scroll_close"
		        android:textSize="@dimen/input_text"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:paddingLeft="@dimen/input_text_padding_left"
		        />
		    
		    <ImageView 
		        android:layout_width="16dp"
		        android:layout_height="16dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="15dp"
		        android:src="@drawable/more"
		        android:contentDescription="@null"
		        />
		</RelativeLayout>
		
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/v1_input_border"
	        />	
	        
		<RelativeLayout 
		   	android:clickable="true"
	    	android:id="@+id/about_us"
	    	android:addStatesFromChildren="true"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/input_height">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/aboutus"
		        android:textSize="@dimen/input_text"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:paddingLeft="@dimen/input_text_padding_left"
		        />
		    
		    <ImageView 
		        android:layout_width="16dp"
		        android:layout_height="16dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="15dp"
		        android:src="@drawable/more"
		        android:contentDescription="@null"
		        />
		</RelativeLayout>
		
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/v1_input_border"
	        />	
	        
		<RelativeLayout 
		   	android:clickable="true"
		   	android:id="@+id/verson_update"
		    android:layout_width="match_parent"
		    android:addStatesFromChildren="true"
		    android:layout_height="@dimen/input_height">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/version_update"
		        android:textSize="@dimen/input_text"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:paddingLeft="@dimen/input_text_padding_left"
		        />
		    
		    <TextView 
		        android:id="@+id/verson_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="15dp"
		        android:textSize="14sp"
		        />
		</RelativeLayout>
		
	</LinearLayout>
</LinearLayout>
