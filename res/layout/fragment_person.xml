<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
     
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/indigoColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/center">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <ImageView 
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/morepoint"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
			android:paddingRight="15dp"            
            />
            
    </RelativeLayout>
	 
    <View 
         android:id="@+id/view_below_center"
	     android:layout_width="match_parent"
	     android:layout_height="2px"
	     android:background="@drawable/shadow"
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     android:layout_below="@+id/center"
	     android:layout_alignParentLeft="true"
	     />
    
     <FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/view_below_center"
	    android:layout_marginTop="48dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp">
        
		 <RelativeLayout 
		    android:id="@+id/user_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
			 <com.oneggo.snacks.view.CustomImageView 
			     android:id="@+id/person"
			     android:layout_width="96dp"
			     android:layout_height="96dp"
			     android:layout_centerHorizontal="true"
			     android:contentDescription="@null"
			     />
			 
			 <TextView 
			     android:id="@+id/username"
			     android:layout_below="@+id/person"
			     android:layout_centerHorizontal="true"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_marginTop="20dp"
			     android:textSize="14sp"
			     android:textColor="@color/defaultColor"
			     />	  
			     
			 <TextView 
			     android:id="@+id/gender"
			     android:layout_toRightOf="@+id/username"
			     android:layout_alignBottom="@+id/username"
			     android:textSize="14sp"
			     android:layout_marginLeft="5dp"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     />
		</RelativeLayout>     
		
		 <RelativeLayout 
		    android:id="@+id/login_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
			 <ImageView 
			     android:id="@+id/login"
			     android:layout_width="96dp"
			     android:layout_height="96dp"
			     android:layout_centerHorizontal="true"
			     android:contentDescription="@null"
			     android:src="@drawable/defaultperson"
			     />
			 
			 <TextView 
			     android:id="@+id/goLogin"
			     android:layout_below="@+id/login"
			     android:layout_centerHorizontal="true"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_marginTop="20dp"
			     android:textSize="14sp"
			     android:textColor="#99000000"
			     android:text="@string/clicklogin"
			     />	  
		</RelativeLayout>
     </FrameLayout>
	 
	 <View 
	     android:layout_above="@+id/menu"
	     android:layout_alignParentLeft="true"
	     android:layout_width="match_parent"
	     android:layout_height="2px"
	     android:background="@drawable/shadow"
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     />
	 
	 <LinearLayout 
	     android:id="@+id/menu"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	     android:layout_alignParentLeft="true"
	     android:orientation="vertical">
		 <LinearLayout 
		     android:id="@+id/favorites"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:addStatesFromChildren="true"
		     android:clickable="true"
		     android:orientation="vertical"
		     android:background="@color/listitem_person_selector">
		     <RelativeLayout 
		         android:layout_width="match_parent"
		         android:layout_height="50dp">
		         
		         <ImageView 
		             android:id="@+id/favorites_icon"
		             android:layout_width="16dp"
		             android:layout_height="16dp"
		             android:src="@drawable/favorites_icon"
		             android:layout_alignParentLeft="true"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:contentDescription="@null"
		             />
		         
		         <TextView 
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="@string/favorites"
		             android:textSize="14sp"
		             android:layout_toRightOf="@+id/favorites_icon"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:textColor="#99000000"
		             />
		         
		         <ImageView 
		             android:layout_width="12dp"
		             android:layout_height="12dp"
		             android:src="@drawable/more_selector"
		             android:layout_marginRight="10dp"
		             android:layout_alignParentRight="true"
		             android:layout_centerVertical="true"
		             />
		     </RelativeLayout>
		         
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="@drawable/shadow"
		        />
		 </LinearLayout>
		 
		 <LinearLayout 
		     android:id="@+id/push_setting"
		     android:clickable="true"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:orientation="vertical"
		     android:background="@color/listitem_person_selector">
		     <RelativeLayout 
		         android:layout_width="match_parent"
		         android:layout_height="50dp">
		         
		         <ImageView 
		             android:id="@+id/push_icon"
		             android:layout_width="16dp"
		             android:layout_height="16dp"
		             android:src="@drawable/push_icon"
		             android:layout_alignParentLeft="true"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:contentDescription="@null"
		             />
		         
		         <TextView 
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="@string/push_setting"
		             android:textSize="14sp"
		             android:layout_toRightOf="@+id/push_icon"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:textColor="#99000000"
		             />
		         
		         <ImageView 
		             android:layout_width="12dp"
		             android:layout_height="12dp"
		             android:src="@drawable/more_selector"
		             android:layout_marginRight="10dp"
		             android:layout_alignParentRight="true"
		             android:layout_centerVertical="true"
		             />
		     </RelativeLayout>
		         
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="@drawable/shadow"
		        />
		 </LinearLayout>
		
		 <LinearLayout 
		     android:id="@+id/i_want_tucao"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:orientation="vertical"
		     android:background="@color/listitem_person_selector">
		     <RelativeLayout 
		         android:layout_width="match_parent"
		         android:layout_height="50dp">
		         
				<ImageView 
		             android:id="@+id/tucao_icon"
		             android:layout_width="16dp"
		             android:layout_height="16dp"
		             android:src="@drawable/tucao_icon"
		             android:layout_alignParentLeft="true"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:contentDescription="@null"
		             />

		         <TextView 
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="@string/i_want_tucao"
		             android:textSize="14sp"
		             android:layout_toRightOf="@+id/tucao_icon"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:textColor="#99000000"
		             />
		         
		         <ImageView 
		             android:layout_width="12dp"
		             android:layout_height="12dp"
		             android:src="@drawable/more_selector"
		             android:layout_marginRight="10dp"
		             android:layout_alignParentRight="true"
		             android:layout_centerVertical="true"
		             android:contentDescription="@null"
		             />
		     </RelativeLayout>
		         
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="@drawable/shadow"
		        />
		 </LinearLayout>
		 
		 <LinearLayout 
		     android:id="@+id/share_app"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:orientation="vertical"
		     android:background="@color/listitem_person_selector">
		     <RelativeLayout 
		         android:layout_width="match_parent"
		         android:layout_height="50dp">
		       
				<ImageView 
		             android:id="@+id/share_app_icon"
		             android:layout_width="16dp"
		             android:layout_height="16dp"
		             android:src="@drawable/share_app_icon"
		             android:layout_alignParentLeft="true"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:contentDescription="@null"
		             />
		         
		         <TextView 
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="@string/share_app"
		             android:textSize="14sp"
		             android:layout_toRightOf="@+id/share_app_icon"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:textColor="#99000000"
		             />
		         
		         <ImageView 
		             android:layout_width="12dp"
		             android:layout_height="12dp"
		             android:src="@drawable/more_selector"
		             android:layout_marginRight="10dp"
		             android:layout_alignParentRight="true"
		             android:layout_centerVertical="true"
		             android:contentDescription="@null"
		             />
		     </RelativeLayout>
		         
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="@drawable/shadow"
		        />
		 </LinearLayout>
		 
		 <LinearLayout 
		     android:id="@+id/hot_app"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:orientation="vertical"
		     android:background="@color/listitem_person_selector">
		     <RelativeLayout 
		         android:layout_width="match_parent"
		         android:layout_height="50dp">
		         
				<ImageView 
		             android:id="@+id/hot_app_icon"
		             android:layout_width="16dp"
		             android:layout_height="16dp"
		             android:src="@drawable/hot_app_icon"
		             android:layout_alignParentLeft="true"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:contentDescription="@null"
		             />

		         <TextView 
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="@string/hot_app"
		             android:textSize="14sp"
		             android:layout_toRightOf="@+id/hot_app_icon"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:textColor="#99000000"
		             />
		         
		         <ImageView 
		             android:layout_width="12dp"
		             android:layout_height="12dp"
		             android:src="@drawable/more_selector"
		             android:layout_marginRight="10dp"
		             android:layout_alignParentRight="true"
		             android:layout_centerVertical="true"
		             />
		     </RelativeLayout>
		         
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="@drawable/shadow"
		        />
		 </LinearLayout>
		 
		 <LinearLayout 
		     android:id="@+id/logout"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:clickable="true"
		     android:addStatesFromChildren="true"
		     android:orientation="vertical"
		     android:background="@color/listitem_person_selector">
		     <RelativeLayout 
		         android:layout_width="match_parent"
		         android:layout_height="50dp">
		         
				<ImageView 
		             android:id="@+id/logout_icon"
		             android:layout_width="16dp"
		             android:layout_height="16dp"
		             android:src="@drawable/logout_icon"
		             android:layout_alignParentLeft="true"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:contentDescription="@null"
		             />

		         <TextView 
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="@string/logout"
		             android:textSize="14sp"
		             android:layout_toRightOf="@+id/logout_icon"
		             android:layout_centerVertical="true"
		             android:layout_marginLeft="10dp"
		             android:textColor="#99000000"
		             />
		         
		         <ImageView 
		             android:layout_width="12dp"
		             android:layout_height="12dp"
		             android:src="@drawable/more_selector"
		             android:layout_marginRight="10dp"
		             android:layout_alignParentRight="true"
		             android:layout_centerVertical="true"
		             />
		     </RelativeLayout>
		         
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="@drawable/shadow"
		        />
		 </LinearLayout>	     
	 </LinearLayout>
</RelativeLayout>